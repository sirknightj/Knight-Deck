<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.control.*?>
<?import javafx.scene.layout.*?>
<?import javafx.scene.text.*?>

<VBox fx:id="EntireWindow" alignment="CENTER" focusTraversable="true" prefHeight="720" prefWidth="1080" spacing="50"
      xmlns="http://javafx.com/javafx/10.0.2-internal" xmlns:fx="http://javafx.com/fxml/1"
      fx:controller="HomeScreenController">
    <fx:define>
        <Font fx:id="AllFont" size="60"/>
        <Font fx:id="ButtonFont" size="30"/>
        <Font fx:id="SmallFont" size="20"/>
    </fx:define>

    <Text fx:id="title" text="Knight Deck" font="$AllFont">Knight Deck</Text>
    <HBox alignment="CENTER" spacing="50">
        <TextField fx:id="NameInputBox" prefWidth="150" promptText="Name" font="$ButtonFont" onAction="#play"/>
        <Button fx:id="PlayButton" onAction="#play" prefWidth="150" font="$ButtonFont">Play</Button>
    </HBox>
    <Text fx:id="NoNameErrorMessage" font="$SmallFont"/>
</VBox>
